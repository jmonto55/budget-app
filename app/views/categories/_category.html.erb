<div id="<%= dom_id category %>">
  <li class="px-4 py-2 mb-5 border border-neutral-300 shadow bg-white">
    <img src="<%= category.icon %>" 
        alt="<%= category.name %>'s icon"
        class=" w-16 h-16 object-cover">
    <div class="flex flex-col justify-between flex-1 gap-3">
      <h3><%= category.name %></h3>
      <p class="text-xs"><%= category.created_at.strftime('%b %d, %Y') %></p>
    </div>
    <p class=" font-proxima_bold">$<%= category.total_amount.round(2) %></p>
  </li>
  <% if action_name != "show" %>
    <%= link_to "Show this category", category, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this category', edit_category_path(category), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
