<section class="w-full h-screen flex flex-col items-center">
  <div class="mb-4 flex flex-col w-full max-w-[568px]">
    <div class="sticky flex head-gradient max-w-[568px] top-0 w-full w-full min-w-[350px] items-center px-4 pt-8 pb-2">
      <%= link_to('javascript:history.back()', class: "") do %>
        <span class="material-symbols-outlined text-white">arrow_back_ios</span>
      <% end %>
      <h2 class="text-white m-auto">NEW EXPENSE</h2>
      <button class="text-white text-[14px]" onclick="document.getElementById('hidden-submit_4').click()">Create</button>
    </div>

    <div class="mx-auto w-full shadow">
      <%= render "form", expense: @expense %>
    </div>
    <h2 class="mt-4 p-2 w-full bg-white shadow">Select related categories 👇🏽</h2>
    <div class="mx-auto w-full">
      <table class="w-full mt-4">
        <% @categories.in_groups_of(2, false) do |group| %>
          <tr class="w-full flex justify-between p-2">
            <% group.each do |category| %>
              <td class="w-1/2 mt-4">
                <%= check_box_tag "expense[category_ids][]", category.id %>
                <%= image_tag category.icon, alt: category.name, class: "w-6 h-6 inline-block mr-2" %>
                <%= label_tag "expense_category_ids_#{category.id}", category.name %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</section>