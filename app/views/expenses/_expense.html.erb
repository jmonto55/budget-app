<li class="mx-5 transition-ease-in-out duration-500 flex justify-between p-2 mb-4 border border-neutral-300 shadow bg-white">
  <div id="<%= dom_id expense %>" class="flex w-full justify-between">
    <div class="flex flex-col justify-between">
      <p class="mb-4">
        <%= expense.name %>
      </p>
      <%= button_to expense_path(expense), method: :delete, class: "text-neutral-500 hover:text-neutral-700 mt-2" do %>
        <span class="material-symbols-outlined">delete</span>
      <% end %>
    </div>
    <div class="flex flex-col justify-between">
      <p class="flex justify-end font-bold">
        <%= number_to_currency(expense.amount, precision: 1) %>
      </p>
      <p class="mt-5 text-[12px]">
        <%= expense.created_at.to_date.strftime('%d-%m-%Y') %>
      </p>
    </div>

    <% if action_name != "show" %>
      <%= link_to "Show this expense", expense, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <%= link_to 'Edit this expense', edit_expense_path(expense), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
      <hr class="mt-6">
    <% end %>
  </div>
</li>
